generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

enum ListType {
    Todo
}

model List {
  id          String      @id @default(uuid())
  owner_id    String      @db.VarChar(32)
  type        ListType    @default(Todo)
  editors     Editors[]
  title       String
  description String?
  todos       ListTask[]

  @@map("lists")
}

model ListTask {
  id        String    @id @default(uuid())
  list      List      @relation(fields: [list_id], references: [id], onDelete: Cascade)
  list_id   String
  completed Boolean   @default(false)
  starred   Boolean   @default(false)
  task      String

  @@map("list_tasks")
}

model Editors {
  id        String    @id @default(uuid())
  user_id   String    @db.VarChar(32)
  list      List      @relation(fields: [list_id], references: [id], onDelete: Cascade)
  list_id   String

  @@map("editors")
}